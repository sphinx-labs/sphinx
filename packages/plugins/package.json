    "type": "git",
    "url": "https://github.com/smartcontracts/chugsplash.git"
  },
  "dependencies": {
    "@chugsplash/contracts": "^0.3.1",
    "@chugsplash/core": "^0.3.1",
    "@eth-optimism/core-utils": "^0.9.1",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "cli-progress": "^3.11.2",
    "ethers": "^5.6.9",
    "hardhat": "^2.10.0",
    "ipfs-http-client": "56.0.3",
    "ipfs-only-hash": "^4.0.0",
    "node-fetch": "^2.6.7",
    "ora": "^5.4.1",
    "semver": "^7.3.7"
  }
