{
  "name": "@chugsplash/plugins",
  "version": "0.16.5",
  "description": "ChugSplash plugins",
  "main": "dist/index",
  "types": "dist/index",
  "bin": {
    "chugsplash": "./dist/cli/index.js"
  },
  "files": [
    "dist/*",
    "contracts/foundry/*",
    "out/artifacts/ChugSplashUtils.sol/ChugSplashUtils.json"
  ],
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "build": "yarn build:ts && yarn build:contracts",
    "build:ts": "tsc -p ./tsconfig.json",
    "build:contracts": "npx hardhat clean && npx hardhat compile && forge build && yarn generate",
    "generate": "npx ts-node script/write-constants.ts > contracts/foundry/ChugSplashConstants.sol",
    "clean": "rimraf dist/ ./tsconfig.tsbuildinfo",
    "test": "yarn test:forge && yarn test:hardhat",
    "test:forge": "forge test",
    "test:hardhat": "npx hardhat test --config-paths './chugsplash/Storage.config.ts, ./chugsplash/Create3.config.ts'",
    "test:coverage": "export DEV_FILE_PATH='./' && export DISABLE_ANALYTICS=true && yarn test",
    "test:kill": "kill $(lsof -t -i:8545)",
    "lint": "yarn lint:fix && yarn lint:check",
    "lint:fix": "yarn lint:ts:fix",
    "lint:check": "yarn lint:ts:check",
    "lint:ts:fix": "yarn lint:ts:check --fix",
    "lint:ts:check": "eslint . --max-warnings=0",
    "pre-commit": "lint-staged",
    "yalc:publish": "yarn build && yalc publish"
  },
  "homepage": "https://github.com/smartcontracts/chugsplash/tree/develop/packages/plugins#readme",
  "license": "MIT",
  "author": "Kelvin Fichter",
  "repository": {
    "type": "git",
    "url": "https://github.com/smartcontracts/chugsplash.git"
  },
  "dependencies": {
    "@chugsplash/contracts": "^0.8.2",
    "@chugsplash/core": "^0.11.0",
    "@eth-optimism/contracts": "^0.5.40",
    "@eth-optimism/core-utils": "^0.9.1",
    "@ethereumjs/common": "^3.0.1",
    "@ethereumjs/vm": "^6.2.0",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@openzeppelin/hardhat-upgrades": "^1.22.1",
    "@openzeppelin/upgrades-core": "^1.24.0",
    "@prb/math": "^4.0.0",
    "@swc/core": "^1.3.62",
    "dotenv": "^16.0.3",
    "ethers": "^5.6.9",
    "ipfs-http-client": "56.0.3",
    "ipfs-only-hash": "^4.0.0",
    "node-fetch": "^2.6.7",
    "ora": "^5.4.1",
    "semver": "^7.3.7",
    "solmate": "^6.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "yargs": "^17.7.2",
    "yesno": "^0.4.0"
  },
  "devDependencies": {
    "@eth-optimism/contracts-bedrock": "^0.0.0-20230522161230",
    "@openzeppelin/contracts": "^4.8.1",
    "@openzeppelin/contracts-upgradeable": "^4.8.3",
    "@openzeppelin/hardhat-upgrades": "^1.22.1",
    "@types/yargs": "^17.0.24",
    "chai": "^4.3.7",
    "ds-test": "https://github.com/dapphub/ds-test.git#e282159d5170298eb2455a6c05280ab5a73a4ef0",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#66bf4e2c92cf507531599845e8d5a08cc2e3b5bb",
    "hardhat": "^2.10.0"
  },
  "peerDependencies": {
    "hardhat": "^2"
  }
}
